<div class="card">
  <div class="label">{title}</div>
  <a href={href} target="_blank">
    <img class="image" src={src} alt={alt} />
  </a>
</div>

<style>
  /* Estilos generales de la card */
  .card {
    font-family: "Onest Variable", sans-serif;
    position: relative;
    width: 300px; /* Ajusta según el tamaño deseado */
    height: 200px; /* Ajusta según el tamaño deseado */
    border-radius: 16px; /* Esquinas redondeadas */
    overflow: hidden; /* Para evitar que los elementos internos sobresalgan */
    box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.4); /* Sombra */
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Hover para añadir profundidad */
  .card:hover {
    transform: translateY(-10px);
    box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.6);
    cursor: pointer;
  }
