---
import background from "../assets/background.svg";
import astronauta from "../assets/astronauta.webp";
import Boton from "../components/boton.astro";
import Tecnologias from "../components/Tecnologias.astro";
---

<section id="section" class="dark:bg-slate-950">
  <div id="container">
    <img id="background" src={background.src} alt="" fetchpriority="high" />
    <main>
      <section id="hero">
        <h1 class="dark:text-white">
          Diseño <span class="dynamic-gradient">Web</span>
        </h1>
        <p class="dark:text-white">
          Diseñamos y creamos tu web.<br />Rápidas y Eficientes con Tecnología
          de Punta
        </p>
        <div class="boton">
          <Boton
            text="Conoceme"
            link="https://dreez-web.github.io/Personal-Web/"
            bgColor="#FFFFFF"
            textColor="#000000"
            borderColor="#FFFFFF"
            hoverBgColor="#000000"
            hoverTextColor="#FFFFFF"
          />
          <Boton text="Contactanos" link="#contacto" />
        </div>
      </section>
      <img src={astronauta.src} alt="Astronauta" class="astronauta" />
    </main>
  </div>
  <Tecnologias />
</section>
<style>
  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
  }

  #container {
    height: 100%;
  }

  main {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 40px 100px;
    
  }

  #hero {
    display: flex;
    align-items: start;
    flex-direction: column;
    justify-content: center;
    padding: 86px;
    gap: 2rem;
  }
  .boton {
    display: flex;
    justify-content: center;
    gap: 20px;
  }
  h1 {
    padding-top: 2rem;
    font-size: 5rem;
    font-weight: 600;
    line-height: 1;
  }

  h2 {
    font-weight: 500;
    color: #111827;
    font-size: 20px;
  }
  span {
    color: #f03cae;
    font-weight: bold;
  
  }
  p {
    color: #4b5563;
    font-size: 1.5rem;
    line-height: 1.5; /* Mejora la legibilidad */
    letter-spacing: -0.006em;
    margin: 0.25em 0; /* Reduce margen superior e inferior */
  }

  .astronauta {
    width: 500px; /* Ajusta según el tamaño deseado */
    animation: float 5s ease-in-out infinite;
  }

  @keyframes float {
    0% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-20px);
    }
    100% {
      transform: translateY(0);
    }
  }

  .dynamic-gradient {
    background: linear-gradient(90deg, #ff6ec4, #2c26f0, #23af57, #ff6ec4);
    background-size: 300%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradient-move 3s linear infinite;
  }

  @keyframes gradient-move {
    0% {
      background-position: 0% 50%;
    }
    100% {
      background-position: 100% 50%;
    }
  }

  @media (max-width: 768px) {
    .section {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
    #container {
      height: 100%;
      display: flex;
      flex-direction: column;
    }
    #hero {
      padding: 2rem;
      width: 100%;
      align-items: center;
    }

    h1 {
      font-size: 5rem;
      text-align: center;
    }

    p {
      font-size: 1.5rem;
      text-align: center;
    }

    .astronauta {
      display: none;
    }
  }
</style>
