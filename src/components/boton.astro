---
const {
  link,
  text,
  bgColor = "#212121",
  textColor = "#f5f5f5",
  borderColor = "#212121",
  hoverBgColor = "#ffffff",
  hoverTextColor = "#212121",
  hoverBorderColor = "#b3b3b3",
} = Astro.props;
---

<a
  href={link}
  target="_self"
  class="button"
  style={`--bg-color: ${bgColor}; --text-color: ${textColor}; --border-color: ${borderColor}; --hover-bg-color: ${hoverBgColor}; --hover-text-color: ${hoverTextColor}; --hover-border-color: ${hoverBorderColor};`}
>
  {text}
</a>

<style>
  .button {
    display: inline-flex;
    width: auto;
    padding: 0.5rem 1rem;
    margin-top: 1.25rem;
    font-size: 0.75rem;
    font-weight: 600;
    border-width: 1px;
    border-style: solid;
    border-color: var(--border-color, #212121); /* Default border color */
    border-radius: 9999px;
    background-color: var(--bg-color, #212121); /* Default background color */
    color: var(--text-color, #f5f5f5); /* Default text color */
    transition: all 300ms ease-out;
  }

  .button:hover {
    border-color: var(--hover-border-color, #b3b3b3); /* Hover border color */
    background-color: var(
      --hover-bg-color,
      #ffffff
    ); /* Hover background color */
    color: var(--hover-text-color, #212121); /* Hover text color */
  }

  a.button {
    text-decoration: none;
  }
</style>
