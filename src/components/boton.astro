---
const { link, text } = Astro.props;
---

<a href={link} target="_blank" class="button">
  {text}
</a>

<style>
    .button {
  display: inline-flex;
  
  width: auto;
  padding: 0.5rem 1rem;
  margin-top: 1.25rem;
  font-size: 0.75rem;
  font-weight: 600;
  border-width: 1px;
  border-style: solid;
  border-color: #212121; /* border-neutral-900 */
  border-radius: 9999px;
  background-color: #212121; /* bg-neutral-900 */
  color: #f5f5f5; /* text-neutral-100 */
  transition: all 300ms ease-out;
}

.button:hover {
  border-color: #b3b3b3; /* hover:border-neutral-700 */
  background-color: #ffffff; /* hover:bg-white */
  color: #212121; /* hover:text-neutral-900 */
}

a.button {
  text-decoration: none;
}

</style>